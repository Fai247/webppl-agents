var makeStudy = function(noiseProb, alpha, utilities){
  var utility = function(state,action){
    if (state[0] !== 'dead') { 
      return utilities[state[0]] - .1;
    } else {
      return 0;
    }
  };
  var blockedStates = [];
  var terminals = [[3,0]];
  return makeBlockedGridParams(4,1, blockedStates, terminals, utility, noiseProb, alpha);
};


