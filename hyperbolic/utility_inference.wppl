var start = { 
  loc : [3,0],
  dead : false,
  digest : 2, 
  timeLeft : 13
};

var donutUtility = makeDonutUtility(2, {
    'Donut' : [1, -1],
    'Veg'   : [-1, 2],
    'Noodle': [0, 0]
});

var world = makeDonutWorld2({ big : true});
var actual_agent = makeHyperbolicDiscounter(
    { utility : donutUtility,
      alpha : 500, 
      discount : 1, 
      sophisticatedOrNaive  : 'sophisticated' 
    }, world);
var observed = simulate(start, world, actual_agent, 12, 'both');

var posterior = MH(function () {
  var discount = 1;
  var type = 'sophisticated';
  var alpha = 500;
  var dU = uniformDraw([-1, .5, 1]);
  var vU = uniformDraw([-1, 2.5, 3.5]);

  var donutUtility = makeDonutUtility(4, {
      'Donut' : [dU, 0, 0, 0],
      'Veg'   : [0, 0, 0, vU],
      'Noodle': [0, 0, 0, 0]
  });

  var agent = makeHyperbolicDiscounter(
      { utility : donutUtility,
        alpha : alpha, 
        discount : discount, 
        sophisticatedOrNaive  : type,
      }, world);
  var agentAction = agent.agent;

  map(function (stateAction) {
    var state = stateAction[0];
    var action = stateAction[1];

    factor(agentAction(state).score([], action)) ; 
  }, observed);

  return { type:type, discount:discount, alpha:alpha, dU:dU, vU:vU };
});

viz.print(posterior)
